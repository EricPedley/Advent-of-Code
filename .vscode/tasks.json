{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build and run haskell program",
        "type": "shell",
        "command": "ghc -dynamic ${file} && cat ${fileDirname}/in.txt | ${fileDirname}/${fileBasenameNoExtension}",
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        }
      },
      {
        "label": "Build and test haskell program",
        "type": "shell",
        "command": "ghc -dynamic ${file} && cat ${fileDirname}/tst.txt | ${fileDirname}/${fileBasenameNoExtension}",
        "group": "test",
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        }
      }
    ]
  }